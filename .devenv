# Vars to use in lxc-create
NAME="odoo14-ce"
DISTRIBUTION="ubuntu"
RELEASE="bionic"
ARCH="amd64"
HOST="$NAME.local"

DEVENV_USER="odoo"
DEVENV_GROUP="odoo"

# Make sure that the directory "../odoo-ce" exists
# in the host machine before executing this script.
# Else, please clone it from https://gitlab.com/coopdevs/odoo-ce

PROJECT_NAME="energy_communities"
PROJECT_PATH="${PWD%/*}/odoo-ce/$PROJECT_NAME"
declare -a OTHER_PROJECTS_PATHS=(
"${PWD%/*}/odoo-ce/energy_communities_keycloak"
)
BASE_PATH="/opt/odoo_modules"
